{
  "name": "reading-book-api",
  "private": true,
  "version": "1.0.0",
  "author": "TAAgnes",
  "description": "Reading Book API with Firebase",
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "scripts": {
    "start": "node build/src/index.js",
    "dev": "nodemon --exec babel-node ./src/index.js",
    "lint": "eslint src --ext .js --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext .js --fix",
    "clean": "rimraf build && mkdir build",
    "build-babel": "babel ./src -d ./build/src",
    "build": "npm run clean && npm run build-babel",
    "production": "npm run build && npm run start",
    "docker:build": "docker build -t reading-book-api .",
    "docker:run": "docker run -p 9000:9000 --env-file .env reading-book-api",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "@babel/runtime": "^7.23.9",
    "bcrypt": "^6.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.1",
    "epub": "^1.3.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "firebase": "^10.7.2",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "http-status": "^2.1.0",
    "http-status-codes": "^2.3.0",
    "joi": "^17.12.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-custom": "^1.1.1",
    "passport-jwt": "^4.0.1",
    "sendgrid": "^5.2.3",
    "@sendgrid/mail": "^8.1.0",
    "socket.io": "^4.7.4",
    "twilio": "^4.19.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.9",
    "@babel/core": "^7.23.9",
    "@babel/eslint-parser": "^7.23.9",
    "@babel/node": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5"
  }
}
